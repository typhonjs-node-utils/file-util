{
  "name": "@typhonjs-utils/file-util",
  "description": "Provides several utility functions for working with the file system including a TyphonJS plugin.",
  "version": "0.0.7",
  "author": "Michael Leahy <support@typhonjs.io> (https://github.com/typhonrt)",
  "type": "module",
  "exports": {
    ".": {
      "browser": {
        "types": "./types/index-browser.d.ts",
        "import": "./src/functions-browser.js"
      },
      "node": {
        "types": "./types/index.d.ts",
        "import": "./src/index.js"
      }
    },
    "./plugin": {
       "browser": "./src/plugin-browser.js",
       "node": "./src/plugin.js"
    },
    "./package.json": "./package.json"
  },
  "contributors": [
    "Michael Leahy <support@typhonjs.io> (https://github.com/typhonrt)"
  ],
  "dependencies": {
    "upath": "^2"
  },
  "devDependencies": {
    "@typhonjs-build-test/node": "^0.0.4",
    "@typhonjs-build-test/esm-d-ts": "^0.0.19"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "/npm-shrinkwrap.json",
    "/src",
    "/types"
  ],
  "homepage": "https://github.com/typhonjs-node-utils/file-util#readme",
  "keywords": [
    "typhonjs",
    "utils",
    "file"
  ],
  "license": "MPL-2.0",
  "bugs": "https://github.com/typhonjs-node-utils/file-util/issues",
  "repository": "github:typhonjs-node-utils/file-util",
  "scripts": {
    "eslint": "eslint .",
    "posttest": "npm run eslint",
    "test": "c8 --reporter=lcov --reporter=text-summary mocha -colors \"test/src/**/*.test.js\"",
    "types": "node -e \"import('@typhonjs-build-test/esm-d-ts').then(module => { module.generateDTS({ input: './src/index.js', output: './types/index.d.ts' }); module.generateDTS({ input: './src/functions-browser.js', output: './types/index-browser.d.ts' }) });\""
  }
}
